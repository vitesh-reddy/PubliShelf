                    <a href="#" class="text-gray-600 hover:text-purple-600">Fantasy</a>
                    <a href="#" class="text-gray-600 hover:text-purple-600">Sci-Fi</a>
                    <a href="#" class="text-gray-600 hover:text-purple-600">Thrillers</a>
                    <a href="#" class="text-gray-600 hover:text-purple-600">Romance</a>
                    <a href="#" class="text-gray-600 hover:text-purple-600">Historical Fiction</a>
                </div>
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Filters -->
            <!-- <div class="flex justify-between items-center mb-8">
                <div class="flex space-x-4">
